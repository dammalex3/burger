<div class="jumbotron text-center border-bottom">
    <h1 class="display-4">Eat-Da-Burger</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-6 border">
            <h2>Burgers to eat</h2>
            <ul>
            {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
            {{/each}}
            </ul>
        </div>

        <div class="col-lg-6 border">
            <h2>Burgers I ate</h2>
            <ul>
            {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
            {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-3 col-lg-offset-5">
            <h2>Add a Burger</h2>
            <form class="create-form">
            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="burger_name">
            </div>
            <button type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>


